{
  "tasks": {
    "local_checkout": "./clone_raycast_sparse.sh --repo https://github.com/raycast/extensions.git",
    "local_pull": "git -C ./repo pull --progress --verbose",
    "run": "deno run -A scripts/run.ts",
    "run-force": "deno run -A scripts/run.ts --force",
    "run-local-dev": "deno run -A scripts/run.ts --force --no-icons",
    "clean": "deno run -A scripts/clean.ts"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@svarta/walk-it": "jsr:@svarta/walk-it@^5.0.1",
    "badge-maker": "npm:badge-maker@^5.0.2",
    "date-fns": "npm:date-fns@^4.1.0",
    "nanoid": "npm:nanoid@^5.1.6"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": false,
    "useTabs": false,
    "proseWrap": "preserve"
  },
  "exclude": [
    ".github/",
    "README.md",
    "data/*.json",
    "icons/",
    "repo/",
    "assets/"
  ]
}
